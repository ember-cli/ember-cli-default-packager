{
  "include": [
    "src/**/*",
    "test"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ],

  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "stripInternal": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "paths": {
      "*": ["./types/*"],
      "ember-cli-default-packager": ["./src/index.ts"]
    },
    "rootDirs": [
      "src",
      "test"
    ],
    "typeRoots": [
      "types",
      "node_modules/@types/chai",
      "node_modules/@types/mocha",
      "node_modules/@types/node"
    ],
    "sourceRoot": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true
  }
}
